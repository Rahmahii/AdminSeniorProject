<!DOCTYPE html>
<html lang="en">

<%- include('./parts/head.ejs') -%>

  <body>
    <!--Navigation bar-->
    <%- include('./parts/nav.ejs') -%>
      <% if(message!=0) {%>
        <div class="alert alert-warning" role="alert">
          <%=message[message.length-1] %>
        </div>
        <% } %>
          <a type="button" class="btn btn-primary btn-sm" style="margin:10px ;" href="http://localhost:8000/AddProduct"
            role="button">Add Product</a>
          <div class="container">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Price</th>
                  <th scope="col">Descreption</th>
                  <th scope="col">barcode</th>
                  <th scope="col">image</th>

                </tr>
              </thead>
              <tbody>

                <% for (let index=0; index < json.length; index++) { %>
                  <%const description=(json[index].description).replaceAll(" ", "&")%> 
                  <%const name=(json[index].name).replaceAll(" ", "&")%> 
                  <tr>

                    <th scope="row">
                      <%=json[index].id %>
                    </th>

                    <td>
                        <a type="button" role="button" href=<%="http://localhost:8000/UpdateProduct/"
                          +name+"/"+json[index].price+"/"+json[index].sellPrice+"/"+json[index].barcodeNum+"/"+description+"/"+json[index].id%>
                          >
                          &#9998
                        </a>
                        <%=json[index].name %>
                    </td>
                    <td>
                      <%=json[index].category.name %>
                    </td>
                    <td>
                      <%=json[index].price %>
                    </td>
                    <td>
                      <%=json[index].description %>
                    </td>
                    <td>
                      <%=json[index].barcodeNum %>
                    </td>
                    <td>
                      <img width="100px" src=<%="http://localhost:3000/" +json[index].image %> />
                      <a type="button" role="button" href=<%="http://localhost:8000/UpdateProductImage/"
                        +json[index].id%> >
                        &#9998
                      </a>
                    </td>


                    <td><a type="button" class="btn btn-danger btn-sm" id="delete" style="margin:10px ;"
                        href=<%="http://localhost:8000/DeleteProduct/" +json[index].id%> role="button">X</a></td>
                  </tr>
                  <% } %>


              </tbody>
            </table>

          </div>


  </body>

</html>