<!DOCTYPE html>
<html lang="en">
<%- include('./parts/head.ejs') -%>

    <body>
        <%- include('./parts/nav.ejs') -%>
            <div class="container">
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPhone1" class="form-label">Phone</label>
                        <input type="tel" name="phone" class="form-control" id="exampleInputPhone1"
                           >
                    </div>
                    <div class="mb-3">
                        <label for="storeId">Choose your store from the list:</label>
                        <select id="storeId" name="storeId" class="form-label">
                             <% for (let index = 0; index < json.length; index++) { %>  
                          <option value="<%=json[index].id%>"><%=json[index].name %> </option>
                          <% } %> 
                        </select>
                        
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control"  name="password" id="password">
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
    </body>

</html>